---
interface InstagramReel {
  url: string;
  title: string;
  description: string;
}

const reels: InstagramReel[] = [
  {
    url: "https://www.instagram.com/p/DCv4rtlzttE/",
    title: "Product Company vs Service Based Company",
    description: "Understanding the key differences between working at product and service-based companies in tech."
  },
  {
    url: "https://www.instagram.com/p/DCrATFkTdTb/",
    title: "Being Selfish",
    description: "Why it's important to prioritize your growth and career development in the tech industry."
  },
  {
    url: "https://www.instagram.com/p/DB3OnB1vKyA/",
    title: "Trust Your Instincts",
    description: "Learning to trust your gut feelings when making important career decisions in tech."
  }
];
---
<section id="content" class="py-20 bg-purple-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Featured Content</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {reels.map((reel) => (
        <a 
          href={reel.url}
          target="_blank"
          class="bg-white rounded-lg shadow-md overflow-hidden transform hover:scale-105 transition-transform duration-300"
        >
          <div class="relative">
            <div class="aspect-video bg-gradient-to-br from-purple-100 to-pink-100 flex items-center justify-center">
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                class="h-12 w-12 text-purple-600 opacity-70" 
                fill="none" 
                viewBox="0 0 24 24" 
                stroke="currentColor"
              >
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"
                />
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
            </div>
            <div class="absolute top-3 right-3">
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                class="h-6 w-6 text-purple-600" 
                fill="none" 
                viewBox="0 0 24 24" 
                stroke="currentColor"
              >
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M13 10V3L4 14h7v7l9-11h-7z"
                />
              </svg>
            </div>
          </div>
          <div class="p-6">
            <h3 class="font-bold mb-2 text-gray-800">{reel.title}</h3>
            <p class="text-gray-600 text-sm">{reel.description}</p>
          </div>
        </a>
      ))}
    </div>
    <div class="text-center mt-12">
      <a 
        href="https://www.instagram.com/iswaryaagp/"
        target="_blank"
        class="inline-flex items-center gap-2 text-purple-600 hover:text-purple-700 font-medium"
      >
        View more on Instagram
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          class="h-5 w-5" 
          viewBox="0 0 20 20" 
          fill="currentColor"
        >
          <path 
            fill-rule="evenodd" 
            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" 
            clip-rule="evenodd"
          />
        </svg>
      </a>
    </div>
  </div>
</section>